{
  "name": "arcade",
  "version": "1.0.50",
  "type": "module",
  "module": "src/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently -k -n server,client \"bun --watch server/index.ts\" \"bun run --cwd client dev\"",
    "build:client": "bun run --cwd client build",
    "build:server": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile app ./server/index.ts",
    "build": "bun run build:client && bun run build:server",
    "prod": "cross-env NODE_ENV=production bun run build && ./app"
  },
  "dependencies": {
    "@elysiajs/html": "^1.3.0",
    "@elysiajs/static": "^1.3.0",
    "elysia": "latest"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@typescript-eslint/parser": "^8.32.1",
    "bun-types": "latest",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.26.0",
    "eslint-import-resolver-typescript": "^4.3.5",
    "eslint-plugin-import": "^2.31.0",
    "typescript-eslint": "^8.32.1"
  }
}
